{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true, // 启用严格模式
    "jsx": "preserve",
    "noUnusedLocals": true, // 去除声明却未用的变量
    "sourceMap": true,
    "strictNullChecks": true, // 严格undefined与null检查
    "forceConsistentCasingInFileNames": true, // 区分文件系统的大小写规则
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "allowJs": true,
    "paths": {
      "~/*": [
        "src/*"
      ]
    }
  },
  "exclude": [
    "dist",
    "node_modules"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
